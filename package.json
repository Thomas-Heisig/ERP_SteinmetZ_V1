{
  "name": "erp_steinmetz",
  "private": true,
  "version": "0.3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "run-p -l dev:backend dev:frontend",
    "dev:frontend": "npm run dev -w @erp-steinmetz/frontend",
    "dev:backend": "npm run dev -w @erp-steinmetz/backend",
    "build": "npm run build -ws",
    "build:frontend": "npm run build -w @erp-steinmetz/frontend",
    "build:backend": "npm run build -w @erp-steinmetz/backend",
    "start": "npm run build && npm run start:backend",
    "start:frontend": "npm run start -w @erp-steinmetz/frontend",
    "start:backend": "npm run start -w @erp-steinmetz/backend",
    "test": "npm run test:backend && npm run test:frontend",
    "test:parallel": "run-p test:backend test:frontend",
    "test:ui": "vitest --ui",
    "test:coverage": "npm run test:backend -- --coverage && npm run test:frontend -- --coverage",
    "test:backend": "npm run test -w @erp-steinmetz/backend",
    "test:frontend": "npm run test -w @erp-steinmetz/frontend",
    "docs": "typedoc",
    "docs:serve": "npx http-server docs/api -p 8080 -o",
    "clean": "rimraf node_modules **/node_modules **/dist",
    "clean:frontend": "rimraf apps/frontend/dist",
    "clean:backend": "rimraf apps/backend/dist",
    "lint": "npm run lint -ws",
    "format": "prettier -w .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typedoc": "^0.26.11",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "overrides": {
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "dependencies": {
    "await-lock": "^3.0.0",
    "better-sqlite3": "^12.4.1",
    "chokidar": "^4.0.3",
    "clsx": "^2.1.1",
    "i18next": "^25.6.2",
    "lodash-es": "^4.17.21",
    "monaco-editor": "^0.55.1",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "react-i18next": "^16.3.3",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  }
}
