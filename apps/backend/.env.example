# =============================================================================
# SERVER & APP KONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# DATENBANK KONFIGURATION
# =============================================================================
DB_DRIVER=sqlite
SQLITE_FILE=../../data/dev.sqlite3

# =============================================================================
# AI PROVIDER KONFIGURATION - WÄHLE EINEN PROVIDER
# =============================================================================
# OPTION 1: OpenAI (benötigt API Key)
# AI_PROVIDER=openai
# OPENAI_API_KEY=sk-your-openai-key-here
# OPENAI_MODEL=gpt-4o-mini

# OPTION 2: Ollama (lokal, empfohlen)
AI_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:3b

# OPTION 3: Lokale GGUF Modelle
# AI_PROVIDER=local
# LOCAL_MODEL_PATH=./models/your-model.gguf
# LOCAL_MODEL_NAME=local-model

# OPTION 4: Keine KI (nur Fallback)
# AI_PROVIDER=none

# =============================================================================
# FUNKTIONEN-KATALOG KONFIGURATION
# =============================================================================
FUNCTIONS_DIR=./docs/functions
FUNCTIONS_AUTOLOAD=1
FUNCTIONS_WATCH=1
FUNCTIONS_AUTOPERSIST=0

# =============================================================================
# MODEL VERZEICHNIS
# =============================================================================
MODELS_DIR=./models

# =============================================================================
# FALLBACK & FEHLERTOLERANZ
# =============================================================================
FALLBACK_WIKI=1
AI_FALLBACK_ENABLED=1

# =============================================================================
# SICHERHEIT & LIMITS
# =============================================================================
MAX_FILE_UPLOAD_SIZE=10485760
MAX_BATCH_OPERATION_SIZE=100

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_REQUESTS=1

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# OpenTelemetry Distributed Tracing
# Enable tracing to collect distributed traces across services
OTEL_TRACES_ENABLED=false
OTEL_SERVICE_NAME=erp-steinmetz-backend
OTEL_SERVICE_VERSION=0.2.0

# OTLP Exporter Endpoints
# Use http://localhost:4318/v1/traces for Jaeger (HTTP)
# Use http://localhost:4317 for Jaeger (gRPC)
# Use http://localhost:9411/api/v2/spans for Zipkin
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf

# Tracing Sampler Configuration
# Options: always_on, always_off, traceidratio, parentbased_always_on, parentbased_traceidratio
# Use parentbased_traceidratio for production (respects parent sampling decision)
OTEL_TRACES_SAMPLER=parentbased_traceidratio
OTEL_TRACES_SAMPLER_ARG=0.1

# Resource Attributes (additional metadata)
OTEL_RESOURCE_ATTRIBUTES=deployment.environment=development,service.namespace=erp-steinmetz

# Sentry Error Tracking & Performance Monitoring
# Get your DSN from: https://sentry.io/settings/projects/YOUR_PROJECT/keys/
SENTRY_ENABLED=false
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=

# Sentry Sample Rates (0.0 - 1.0)
# traces: Performance monitoring sample rate
# profiles: Profiling sample rate (requires @sentry/profiling-node)
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Sentry Advanced Configuration
# Enable/disable features
SENTRY_ENABLE_TRACING=true
SENTRY_ENABLE_PROFILING=true
SENTRY_DEBUG=false

# Source Maps (for better stack traces in production)
# Set to true in production builds to generate source maps
SENTRY_UPLOAD_SOURCEMAPS=false
SENTRY_AUTH_TOKEN=

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=change-me-in-production-use-a-long-random-string
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d