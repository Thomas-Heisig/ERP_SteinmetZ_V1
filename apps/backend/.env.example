# =============================================================================
# SERVER & APP KONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# DATENBANK KONFIGURATION
# =============================================================================
DB_DRIVER=sqlite
SQLITE_FILE=../../data/dev.sqlite3

# =============================================================================
# AI PROVIDER KONFIGURATION - WÄHLE EINEN PROVIDER
# =============================================================================
# OPTION 1: OpenAI (benötigt API Key)
# AI_PROVIDER=openai
# OPENAI_API_KEY=sk-your-openai-key-here
# OPENAI_MODEL=gpt-4o-mini

# OPTION 2: Ollama (lokal, empfohlen)
AI_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:3b

# OPTION 3: Lokale GGUF Modelle
# AI_PROVIDER=local
# LOCAL_MODEL_PATH=./models/your-model.gguf
# LOCAL_MODEL_NAME=local-model

# OPTION 4: Keine KI (nur Fallback)
# AI_PROVIDER=none

# =============================================================================
# FUNKTIONEN-KATALOG KONFIGURATION
# =============================================================================
FUNCTIONS_DIR=./docs/functions
FUNCTIONS_AUTOLOAD=1
FUNCTIONS_WATCH=1
FUNCTIONS_AUTOPERSIST=0

# =============================================================================
# MODEL VERZEICHNIS
# =============================================================================
MODELS_DIR=./models

# =============================================================================
# FALLBACK & FEHLERTOLERANZ
# =============================================================================
FALLBACK_WIKI=1
AI_FALLBACK_ENABLED=1

# =============================================================================
# SICHERHEIT & LIMITS
# =============================================================================
MAX_FILE_UPLOAD_SIZE=10485760
MAX_BATCH_OPERATION_SIZE=100

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_REQUESTS=1