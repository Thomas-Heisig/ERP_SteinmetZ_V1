{
  "name": "@erp-steinmetz/backend",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npm run clean && tsc -p . && npm run copy:assets",
    "copy:assets": "node scripts/copy-assets.js",
    "copy:views": "powershell Copy-Item -Recurse -Force src/views dist/views",
    "clean": "rimraf dist",
    "preview": "node dist/index.js",
    "start": "node dist/index.js",
    "migrate": "tsx src/utils/migrateSchema.ts",
    "migrate:prod": "node dist/utils/migrateSchema.js",
    "analyze:indexes": "tsx scripts/analyzeIndexes.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "script:create-admin": "tsx src/scripts/createAdminUser.ts",
    "script:assign-admin-role": "tsx src/scripts/assignAdminRole.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@opentelemetry/auto-instrumentations-node": "^0.52.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.56.0",
    "@opentelemetry/sdk-node": "^0.56.0",
    "@sentry/node": "^8.49.0",
    "@sentry/profiling-node": "^8.49.0",
    "bcrypt": "^6.0.0",
    "connect-redis": "^9.0.0",
    "connect-sqlite3": "^0.9.16",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "node-llama-cpp": "^3.14.2",
    "openai": "^6.7.0",
    "prom-client": "^15.1.3",
    "redis": "^5.10.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/async-retry": "^1.4.9",
    "@types/bcrypt": "^6.0.0",
    "@types/connect-redis": "^0.0.23",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "latest",
    "@types/express": "latest",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/socket.io": "^3.0.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.0",
    "globals": "^16.5.0",
    "rimraf": "^5.0.5",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
