{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": ["apps/backend/src/index.ts"],
  "entryPointStrategy": "resolve",
  "out": "docs/api",
  "tsconfig": "apps/backend/tsconfig.json",
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/node_modules/**",
    "**/dist/**"
  ],
  "excludePrivate": true,
  "excludeProtected": false,
  "excludeInternal": false,
  "includeVersion": true,
  "sort": ["source-order"],
  "categorizeByGroup": true,
  "categoryOrder": ["Services", "Routes", "Middleware", "Utilities", "*"],
  "readme": "none",
  "name": "ERP SteinmetZ - API Documentation",
  "navigationLinks": {
    "GitHub": "https://github.com/Thomas-Heisig/ERP_SteinmetZ_V1"
  },
  "plugin": [],
  "theme": "default",
  "hideGenerator": false,
  "searchInComments": true,
  "cleanOutputDir": true,
  "treatWarningsAsErrors": false,
  "validation": {
    "notExported": false,
    "invalidLink": false,
    "notDocumented": false
  }
}
